#!/bin/bash -l

#SBATCH --ntasks 1
#SBATCH -J tangos-crosslink
#SBATCH -o ./logs/crosslink.out
#SBATCH -e ./logs/crosslink.err
#SBATCH -p COMPUTE
#SBATCH -t 2880 # minutes run time

##########################################################

sim="halo_049"
model1="RECAL"
model2="RECAL"
seed="SEED42"

export TANGOS_TYPE='halo'
export TANGOS_EXTRAS='--force' #Â add --force to recompute

##########################################################

linkwith="z2_od_1p000"

declare -a arr=("z2_od_1p000_merger_z1p7_0p800" "z2_od_1p000_merger_z1p7_0p900" "z2_od_1p000_merger_z1p7_1p100" "z2_od_1p000_merger_z1p7_1p200")
# declare -a arr=("z2_od_1p000_merger_z1p7_0p900" "z2_od_1p000_merger_z1p7_1p100")

tolink=${arr[$SLURM_ARRAY_TASK_ID]}

# tolink="z2_od_1p000_merger_z1p7_0p800_hc"

##########################################################

export LINK1="EAGLE_GM_${sim}_${model1}_${linkwith}_${seed}"
export LINK2="EAGLE_GM_${sim}_${model2}_${tolink}_${seed}"

echo $LINK1
echo $LINK2

tangos crosslink $LINK1 $LINK2 --type=$TANGOS_TYPE $TANGOS_EXTRAS
